{
  "cleanupPeriodDays": 30,
  "env": {
    "OPENAI_API_KEY": "$OPENAI_API_KEY",
    "ANTHROPIC_API_KEY": "$ANTHROPIC_API_KEY",
    "PIP_INDEX_URL": "https://pypi.tuna.tsinghua.edu.cn/simple",
    "GOPROXY": "https://goproxy.cn,direct",
    "GO111MODULE": "on",
    "CGO_ENABLED": "1"
  },
  "includeCoAuthoredBy": false,
  "model": "opusplan",
  "permissions": {
    "allow": [
      "Write(*)",
      "Read(*)",
      "Bash(node *)",
      "Bash(npm *)",
      "Bash(pnpm *)",
      "Bash(yarn *)",
      "Bash(pip *)",
      "Bash(python *)",
      "Bash(go *)",
      "Bash(gofmt *)",
      "Bash(goimports *)",
      "Bash(golint *)",
      "Bash(golangci-lint *)",
      "Bash(go-migrate *)",
      "Bash(migrate *)",
      "Bash(sqlc *)",
      "Bash(swag *)",
      "Bash(mockgen *)",
      "Bash(gotestsum *)",
      "Bash(go-test-coverage *)",
      "Bash(air *)",
      "Bash(delve *)",
      "Bash(dlv *)",
      "Bash(goose *)",
      "Bash(wire *)",
      "Bash(buf *)",
      "Bash(protoc *)",
      "Bash(cobra *)",
      "Bash(viper *)",
      "Bash(cargo *)",
      "Bash(git *)",
      "Bash(gh *)",
      "Bash(docker *)",
      "Bash(docker-compose *)",
      "Bash(docker compose *)",
      "Bash(podman *)",
      "Bash(kubectl *)",
      "Bash(helm *)",
      "Bash(k9s *)",
      "Bash(make *)",
      "Bash(just *)",
      "Bash(task *)",
      "Bash(mage *)",
      "Bash(psql *)",
      "Bash(mysql *)",
      "Bash(mongosh *)",
      "Bash(redis-cli *)",
      "Bash(curl *)",
      "Bash(wget *)",
      "Bash(httpie *)",
      "Bash(jq *)",
      "Bash(yq *)",
      "Bash(grep *)",
      "Bash(rg *)",
      "Bash(find *)",
      "Bash(awk *)",
      "Bash(sed *)",
      "Bash(netstat *)",
      "Bash(lsof *)",
      "Bash(ps *)",
      "Bash(top *)",
      "Bash(htop *)",
      "Bash(kill *)",
      "Bash(pkill *)",
      "Bash(sudo apt-get *)",
      "Bash(sudo apt *)",
      "Bash(sudo dnf *)",
      "Bash(sudo yum *)",
      "Bash(sudo pacman *)",
      "Bash(sudo apk *)",
      "Bash(sudo zypper *)",
      "Bash(sudo systemctl *)",
      "Bash(sudo service *)",
      "Bash(rm -rf ./*)",
      "Bash(rm -rf ./.*)",
      "Bash(rm -rf bin/*)",
      "Bash(rm -rf build/*)",
      "Bash(rm -rf dist/*)",
      "Bash(rm -rf tmp/*)",
      "Bash(rm -rf vendor/*)",
      "Bash(rm -rf coverage.*)",
      "Bash(rm -rf *.out)",
      "Bash(rm -rf *.test)",
      "Bash(rm -rf /tmp/*)",
      "Bash(rm -rf /var/tmp/*)"
    ],
    "deny": [
      "Bash(rm -rf /)",
      "Bash(rm -rf /*)",
      "Bash(rm -rf /?*)",
      "Bash(rm -rf --no-preserve-root *)",
      "Bash(rm -rf --one-file-system /)",
      "Bash(rm -rf ~/*)",
      "Bash(sudo rm -rf /)",
      "Bash(sudo rm -rf /*)",
      "Bash(sudo rm -rf /?*)",
      "Bash(sudo rm -rf ~/*)",
      "Bash(sudo dd if=*)",
      "Bash(dd if=*)",
      "Bash(sudo mkfs.*)",
      "Bash(sudo fdisk *)",
      "Bash(sudo chmod 777 -R *)",
      "Bash(chmod 777 -R *)",
      "Bash(sudo chown *)",
      "Bash(sudo shutdown *)",
      "Bash(sudo reboot *)",
      "Bash(curl http://169.254.169.254*)"
    ],
    "defaultMode": "bypassPermissions"
  }
}