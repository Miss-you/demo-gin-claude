{
  "cleanupPeriodDays": 30,
  "env": {
    "OPENAI_API_KEY": "$OPENAI_API_KEY",
    "ANTHROPIC_API_KEY": "$ANTHROPIC_API_KEY",
    "PIP_INDEX_URL": "https://pypi.tuna.tsinghua.edu.cn/simple"
  },
  "includeCoAuthoredBy": false,
  "model": "opusplan",
  "permissions": {
    "allow": [
      "Write(*)",
      "Read(*)",
      "Bash(node *)",
      "Bash(npm *)",
      "Bash(pnpm *)",
      "Bash(yarn *)",
      "Bash(pip *)",
      "Bash(python *)",
      "Bash(go *)",
      "Bash(cargo *)",
      "Bash(git *)",
      "Bash(docker *)",
      "Bash(docker-compose *)",
      "Bash(docker compose *)",
      "Bash(make *)",
      "Bash(sudo apt-get *)",
      "Bash(sudo apt *)",
      "Bash(sudo dnf *)",
      "Bash(sudo yum *)",
      "Bash(sudo pacman *)",
      "Bash(sudo apk *)",
      "Bash(sudo zypper *)",
      "Bash(sudo systemctl *)",
      "Bash(sudo service *)",
      "Bash(rm -rf ./*)",
      "Bash(rm -rf ./.*)",
      "Bash(rm -rf build/*)",
      "Bash(rm -rf dist/*)",
      "Bash(rm -rf tmp/*)",
      "Bash(rm -rf /tmp/*)",
      "Bash(rm -rf /var/tmp/*)",
      "Bash(curl https://*)"
    ],
    "deny": [
      "Bash(rm -rf /)",
      "Bash(rm -rf /*)",
      "Bash(rm -rf /?*)",
      "Bash(rm -rf --no-preserve-root *)",
      "Bash(rm -rf --one-file-system /)",
      "Bash(rm -rf ~/*)",
      "Bash(sudo rm -rf /)",
      "Bash(sudo rm -rf /*)",
      "Bash(sudo rm -rf /?*)",
      "Bash(sudo rm -rf ~/*)",
      "Bash(sudo dd if=*)",
      "Bash(dd if=*)",
      "Bash(sudo mkfs.*)",
      "Bash(sudo fdisk *)",
      "Bash(sudo chmod 777 -R *)",
      "Bash(chmod 777 -R *)",
      "Bash(sudo chown *)",
      "Bash(sudo shutdown *)",
      "Bash(sudo reboot *)",
      "Bash(curl http://169.254.169.254*)"
    ],
    "defaultMode": "bypassPermissions"
  }
}